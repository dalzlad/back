import java.util.Scanner;

public class Condicionales {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("***********Condicionales************");
		/*]Leer un número entero y determinar si es negativo, 
		 * positivo o igual a cero*/
		/* int numero = 0;
		Scanner leer = new Scanner(System.in);
		System.out.println("Por favor digite un número entero");
		numero = leer.nextInt();  //Lectura de un entero
		if(numero < 0) {
			System.out.println("El número es negativo");
		}
		else if(numero == 0) {
			System.out.println("El número es igual a cero");
		}
		else {
			System.out.println("El número es positivo");
		}
		*/
		char letra = ' ';
		Scanner leer = new Scanner(System.in);
		System.out.println("Por favor digite una letra");
		
		letra = leer.next().charAt(0);
		if(letra == 'a' || letra == 'e' || letra=='i' || letra=='o' || letra=='u') {
			System.out.println("Es una vocal");
		}
		else {
			System.out.println("No es una vocal");
		}
		
		char vocal = letra;
		switch(vocal) {
		case 'a':
			System.out.println("Se ha digitado una a");
			break;
		case 'e':
			System.out.println("Se ha digitado una e");
		case 'i':
			System.out.println("Se ha digitado una i");
		case 'o':
			System.out.println("Se ha digitado una o");
		case 'u':
			System.out.println("Se ha digitado una u");
		default:
				System.out.println("Mes incorrecto");
				break;
		}
		
		//Casteo:  Convertir un dato primitivo a otro tipo de dato
		int numero = 99;
		double numero1 = numero;
		System.out.println(numero);
		System.out.println(numero1);
		
		double valorFactura = 99999.99;
		int valorFactura1 = (int) valorFactura;
		
		System.out.println(valorFactura);
		System.out.println(valorFactura1);
	}
}
