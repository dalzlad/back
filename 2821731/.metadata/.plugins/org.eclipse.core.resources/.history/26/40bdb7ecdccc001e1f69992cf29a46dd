		int numeroDia = 0; //Definición de variable
		Scanner leer = new Scanner(System.in);
		System.out.println("Digite el número del día de la semana");
		
		numeroDia = leer.nextInt();//Capturando el día digitado
		
		switch(numeroDia) {
		case 1:
			System.out.println("El día es Lunes");
			break;
		case 2:
